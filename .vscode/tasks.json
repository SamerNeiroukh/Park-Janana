    {
      "label": "üîç Get Local IP",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "(Get-NetIPAddress -AddressFamily IPv4 | Where-Object {$_.IPAddress -like '192.168.*' -or $_.IPAddress -like '10.0.*'} | Select-Object -First 1).IPAddress"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false
      },
      "problemMatcher": [],
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "(Get-NetIPAddress -AddressFamily IPv4 | Where-Object {$_.IPAddress -like '192.168.*' -or $_.IPAddress -like '10.0.*'} | Select-Object -First 1).IPAddress"
        ]
      },
      "linux": {
        "command": "hostname",
        "args": ["-I"]
      },
      "osx": {
        "command": "ifconfig",
        "args": [
          "|",
          "grep",
          "-E",
          "inet (192\\.168\\.|10\\.0\\.)",
          "|",
          "grep",
          "-v",
          "127.0.0.1",
          "|",
          "awk",
          "'{print $2}'",
          "|",
          "head",
          "-1"
        ]
      }
